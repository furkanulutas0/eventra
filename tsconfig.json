{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./api",
    "baseUrl": ".",
    "paths": {
      "@/*": ["api/*"] // Create the alias
    },
  },
  "include": ["api/**/*.ts"],
  "exclude": ["node_modules"]
}